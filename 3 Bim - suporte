<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<?php
		if ($_POST["nome"]!=""){
			echo "Alo ".$_POST["nome"];
			if ($_POST["sexo"]=='F'){
				echo ", minha garota.";
			}
			elseif ($_POST["sexo"]=='M') echo ", meu garoto.";
			else echo ", ser maravilhoso!";
		}
		else echo "Nome nao informado";
	?>
	<?php

		if (isset($_POST["obrigacoes"])){			
			echo "<br/>Obrigacoes cumpridas: <br/>";
			foreach ($_POST["obrigacoes"] as $obrigacoes) {
				echo "-> $obrigacoes <br/>";				
			}
		}
		else
			echo "Voce vai morre";
	?>
</body>
